{
    "name": "laasti/stack",
    "description": "From request to response. A middleware stack with 3 phases: prepare, respond and close",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Sonia Marquette",
            "email": "contact@nebulousweb.com",
            "homepage": "http://nebulousweb.com/",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/laasti/stack/issues",
        "wiki": "https://github.com/laasti/stack/wiki"
    },
    "require": {
        "php" : "~5.6|~7.0",
        "symfony/http-foundation": "~2.6"
    },
    "require-dev": {
        "phpunit/phpunit" : "~4.0||~5.0",
        "squizlabs/php_codesniffer": "^2.3",
        "league/container": "~1.3"
    },
    "suggest": {
        "league/container": "Integration provided using ContainerResolver",
        "laasti/route": "Provides routing middlewares using league/route"
    },
    "autoload": {
        "psr-4": {
            "Laasti\\Stack\\": "src/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
